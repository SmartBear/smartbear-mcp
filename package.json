{
  "name": "@smartbear/mcp",
  "version": "0.7.0",
  "description": "MCP server for interacting SmartBear Products",
  "keywords": [
    "smartbear",
    "mcp",
    "bugsnag",
    "reflect",
    "api-hub",
    "pactflow"
  ],
  "homepage": "https://developer.smartbear.com/smartbear-mcp",
  "mcpName": "com.smartbear/smartbear-mcp",
  "repository": {
    "type": "git",
    "url": "git@github.com:SmartBear/smartbear-mcp.git"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "assets",
    "**/README.md"
  ],
  "config": {
    "mcpServerName": "SmartBear MCP Server"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:ci": "vitest --coverage --reporter=verbose",
    "test:run": "vitest run",
    "coverage:check": "vitest --coverage --reporter=verbose --config vitest.config.coverage.ts"
  },
  "dependencies": {
    "@bugsnag/js": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "node-cache": "^5.1.2",
    "swagger-client": "^3.35.6",
    "zod": "^3",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3.2.4",
    "globals": "^16.2.0",
    "shx": "^0.3.4",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4",
    "vitest-fetch-mock": "^0.4.5"
  }
}
